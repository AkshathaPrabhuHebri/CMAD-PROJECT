pipeline {

   agent none
   
   stages {
      stage('client-build') {
      	agent{
                docker{
                 image 'node:8.16-alpine'
                 args '-v $HOME/node_modules:/root/node_modules'
                }
		}
		
         steps {
            echo 'compile syslog client service'
            dir('syslog-client'){
            	sh 'npm install'
            }
         }
      }
      
      stage('client-test') {
      	agent{
                docker{
                 image 'node:8.16-alpine'
                 args '-v $HOME/node_modules:/root/node_modules'
                }
		}
         steps {
            echo 'run unit tests'
            dir('syslog-client'){
            	sh 'npm install'
		sh 'npm test'
            }
            
         }
      }
      
	  
	  
	  stage('client-docker-package'){
	  	agent any
	  	steps{
      		echo 'Packaging syslog-client app with docker'
      		script{
      			docker.withRegistry('https://index.docker.io/v1/', 'dockerlogin') {
      				def syslogClientImage = docker.build("myselfakshatha/syslog-client:v${env.BUILD_ID}", "./result/")
      				syslogClientImage.push()
      				syslogClientImage.push("latest")
      				}
      			}
      			
      		}
      	}
      			
   }
   
        post{
         always{
             echo 'the job is complete'
         }
   }
}